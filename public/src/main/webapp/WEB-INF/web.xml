<web-app xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">


   <display-name>MTT Test</display-name>

   <context-param>
       <param-name>contextConfigLocation</param-name>
       <param-value>classpath:/META-INF/application-context.xml</param-value>
   </context-param>

    <!--<listener>-->
        <!--<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>-->
    <!--</listener>-->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

   <servlet>
       <servlet-name>website</servlet-name>
       <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
       <init-param>
           <param-name>contextConfigLocation</param-name>
           <param-value>classpath:/META-INF/website-context.xml</param-value>
       </init-param>
       <load-on-startup>1</load-on-startup>
   </servlet>

        <!--JAWR Servlets-->

    <servlet>
        <servlet-name>JavascriptServlet</servlet-name>
        <servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>
		<init-param>
			<param-name>configLocation</param-name>
			<param-value>/META-INF/jawr/jawr.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

    <servlet>
		<servlet-name>CSSServlet</servlet-name>
		<servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>
		<init-param>
			<param-name>configLocation</param-name>
			<param-value>/META-INF/jawr/jawr.properties</param-value>
		</init-param>
		<init-param>
			<param-name>type</param-name>
			<param-value>css</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

    <servlet>
        <servlet-name>JawrImgServlet</servlet-name>
        <servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>
        <init-param>
            <param-name>type</param-name>
            <param-value>img</param-value>
        </init-param>
        <init-param>
            <param-name>configLocation</param-name>
            <param-value>/META-INF/jawr/jawr.properties</param-value>
        </init-param>
        <!-- The Jawr Image servlet must start before the Jawr CSS Servlet -->
        <load-on-startup>0</load-on-startup>
    </servlet>

    <!--Servlet Mappings-->

   <servlet-mapping>
       <servlet-name>website</servlet-name>
       <url-pattern>/</url-pattern>
   </servlet-mapping>

    <!--JAWR-->
    <servlet-mapping>
		<servlet-name>JavascriptServlet</servlet-name>
		<url-pattern>*.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CSSServlet</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>JawrImgServlet</servlet-name>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.gif</url-pattern>
        <url-pattern>*.ico</url-pattern>
    </servlet-mapping>

